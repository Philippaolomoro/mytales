<div>
  <div>
    <h1>Create an account</h1>
    <div>
      <p>Let's get started! Becoming a member is free and only takes a few minutes.</p>
      <hr/>
      <div>
        <% if(typeof alert != 'undefined') { %>
          <% alert.forEach(function(error) { %>
            <div class="alert alert-warning alert-dismissible fade show">
              <%= error.msg %>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">Ã—</span>
              </button>
            </div>
          <% }) %>
        <% } %>
      </div>
      <form action="/auth/register" method="post">
        <div>
          <% if (errorMessage == "emailExists") { %>
            <p><small>It looks like there's already an account with your email address. If you forgot your password, you can recover it <a href="password/forgot">here</a>.</small></p>
          <% } %>
        </div>
        <div>
          <label for="fullName">First name</label>
          <input id="fullName" autofocus type="text" placeholder="Full Name" name="fullName">
        </div>
        <div>
          <label for="email">Email address</label>
          <input id="email" type="email" placeholder="Email" name="email">
        </div>
        <div>
          <label for="password">Choose a password</label>
          <input id="password" type="password" placeholder="Password" name="password">
        </div>
        <div>
          <button type="submit">Create account</button>
        </div>
      <form>
      <p>Have an account? <a href="/auth/login">Sign in</a></p>
    </div>
  </div>
